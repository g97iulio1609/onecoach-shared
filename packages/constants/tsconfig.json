{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "noEmit": false,
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "./.tsbuild",
    "rootDir": "./src",
    "baseUrl": ".",
    "paths": {
      "@onecoach/constants": ["./src/index.ts"],
      "@onecoach/constants/*": ["./src/*"],
      "types/*": ["../types/src/*"],
      "types": ["../types/src/index.ts"]
    },
    "strict": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist", ".tsbuild"]
}
