{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noUncheckedIndexedAccess": true,
    "verbatimModuleSyntax": true,
    "noPropertyAccessFromIndexSignature": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "baseUrl": "..",
    "paths": {
      "@OneCoach/constants": ["./packages/constants/src/index.ts"],
      "@OneCoach/constants/*": ["./packages/constants/src/*"],
      "@OneCoach/schemas": ["./packages/schemas/src/index.ts"],
      "@OneCoach/schemas/*": ["./packages/schemas/src/*"],
      "@OneCoach/contracts": ["./packages/contracts/src/index.ts"],
      "@OneCoach/contracts/*": ["./packages/contracts/src/*"],
      "@OneCoach/lib-shared": ["./packages/lib-shared/src/index.ts"],
      "@OneCoach/lib-shared/*": ["./packages/lib-shared/src/*"],
      "@OneCoach/types": ["./packages/types/src/index.ts"],
      "@OneCoach/types/*": ["./packages/types/src/*"],
      "@OneCoach/*": ["./packages/schemas/src/types/onecoach-stub.ts"],
      "@onecoach/*": ["./packages/schemas/src/types/onecoach-stub.ts"]
    }
  }
}
